<p id="notice"><%= notice %></p>

<h1>Listing Condos</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Floor</th>
      <th>Room</th>
      <th>Contact</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @condos.each do |condo| %>
      <tr>
        <td><%= condo.address %></td>
        <td><%= condo.floor %></td>
        <td><%= condo.room %></td>
        <td><%= condo.contact %></td>
        <td><%= condo.manager %></td>
        <td><%= link_to 'Show', condo %></td>
        <td><%= link_to 'Edit', edit_condo_path(condo) %></td>
        <td><%= link_to 'Destroy', condo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

